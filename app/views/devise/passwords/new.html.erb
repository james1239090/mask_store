<div class="passwordBox animated fadeInDown">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox-content">
        <h2 class="font-bold">Forgot your password?</h2>
        <p>
          Enter your email address and your password will be reset and emailed to you.
                </p>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, placeholder: "Email address" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary block full-width m-b" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
