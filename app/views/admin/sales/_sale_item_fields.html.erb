<div class="row nested-fields form-group">
  <div class="row">
    <div class="col-md-6">
      <%= f.association :product, label: false, input_html:{class:"select_product"} %>
    </div>
    <div class="col-md-3">
      <%= f.association :color, collection: ProductOption.by_color(f.object.product_id),label: false, input_html: { class: "select_color" } %>
    </div>
    <div class="col-md-3">
      <%= f.association :dimension, collection: ProductOption.by_dimension(f.object.product_id), label: false, input_html: { class: "select_dimension" } %>
    </div>
      </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.input :quantity  ,label: false%>
    </div>
    <div class="col-md-3">
      <%= f.input :sale_price ,label: false %>
    </div>
    <div class="col-md-3">
      <%= f.input :shipping_fee ,label: false %>
    </div>
    <div class="col-md-2"></div>
    <%= link_to_remove_association f, class:"btn" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </div>
</div>
