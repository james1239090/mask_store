<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">
          <h2>Product List</h2>
          <div class="pull-right" style="padding-bottom:20px;">
            <%= link_to("新增產品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
          </div>
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
            <thead>
              <tr>
                <th data-toggle="true">#</th>
                <th>Product Name</th>
                <th data-hide="all"></th>
                <th data-hide="all">Description</th>
                <th>Price</th>
                <th class="text-right" data-sort-ignore="true">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.id %></td>
                  <td>
                    <%= product.title %>
                  </td>
                  <td class="align-text-top">
                    <%= link_to product_path(product) do %>
                      <div class="row">
                        <% if product.photo.present? %>
                          <% product.photo.images.each do |image| %>
                            <div class="col-md-6">
                              <%= image_tag(image.thumb.url, class:"thumbnail") %>
                            </div>
                          <% end %>
                        <% else %>
                          <%= image_tag("http://placehold.it/200x200&text=No Pic",class:"thumbnail") %>
                        <% end %>
                      </div>
                    <% end %>
                  </td>
                  <td>
                    <%= product.description %>
                  </td>
                  <td>
                    <%= product.price %>
                  </td>
                  <td class="text-right">
                    <%= link_to edit_admin_product_path(product), class:"btn btn-xs btn-outline btn-primary" do %>
                        <i class="fa fa-pencil-square-o">Edit</i>
                    <% end %>
                    <%= link_to admin_product_path(product),class:"btn btn-xs btn-outline btn-danger",method: :delete, data:{confirm:"Are you sure?"} do  %>
                        <i class="fa fa-trash">Delete</i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="6">
                  <ul class="pagination pull-right"></ul>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
          $('.footable').footable();
        });
  </script>
<% end %>
