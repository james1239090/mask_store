<%= simple_form_for [:admin,@product]  do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="group">
    <%= f.input :description %>
  </div>
  <div class="group">
    <%= f.input :quantity %>
  </div>
  <div class="group">
    <%= f.input :price %>
  </div>
  <% if @photo.present? %>
    <span>目前商品圖</span><br>
    <% @photo.images.each do |image| %>
      <%= image_tag(image.thumb.url) %>
    <% end %>
  <% end %>
  <div id="myDropzone" class="dropzone">
    <%= f.simple_fields_for :photo do |c| %>
      <div class="fallback">
        <%= c.input :images , as: :file, input_html: { multiple: 'multiple'} %>
      </div>
    <% end %>
  </div>
  <br>
  <%= f.submit "Submit", class:"btn btn-info pull-right",data:{disable_with: "Submitting..."} %>
<% end %>
