<%= simple_form_for [:admin,@product]  do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="group">
    <%= f.input :description %>
  </div>
  <div class="group">
    <%= f.input :quantity %>
  </div>
  <div class="group">
    <%= f.input :price %>
  </div>
  <label>Size</label>
  <div class="row-fluid">
    <div class="col-md-offset-1">
      <div class="links">
        <%= link_to_add_association f, :sizes, class:"btn btn-info btn-xs" do %>
          <i class="fa fa-plus"></i>Add Size
        <% end %>
      </div>
      <div class="form-group">
        <%= f.simple_fields_for :sizes do |size| %>
          <%= render 'size_fields', f: size %>
        <% end %>
      </div>
    </div>
  </div>
  <div id="myDropzone" class="dropzone">
    <%= f.simple_fields_for :photo do |c| %>
      <div class="fallback">
        <%= c.input :images , as: :file, input_html: { multiple: 'multiple'} %>
      </div>
    <% end %>
  </div>
  <br>
  <%= f.submit "Submit", class:"btn btn-info pull-right",data:{disable_with: "Submitting..."} %>
<% end %>
