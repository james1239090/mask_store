<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">
          <h2>Inventory</h2>
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
            <thead>
              <th data-toggle="true">#</th>
              <th>Product</th>
              <th>Color</th>
              <th>Size</th>
              <th>Cost</th>
              <th>Quantity</th>
              <th>Update_date</th>
              <th data-sort-ignore="true">Action</th>
            </thead>
            <tbody>
              <% @inventories.each do |inventory| %>
                <tr>
                  <td><%= inventory.id %></td>
                  <td><%= inventory.product.title %></td>
                  <td><%= inventory.color.name %></td>
                  <td><%= inventory.dimension.name %></td>
                  <td><%= inventory.cost %></td>
                  <td><%= inventory.quantity %></td>
                  <td><%= inventory.updated_at.to_s(:short) %></td>
                  <td><%= link_to("view", admin_inventory_path(inventory), class: "btn btn-xs  btn-info btn-outline") %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="8">
                  <ul class="pagination pull-right"></ul>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function(){
    $('.footable').footable();
  });
</script>
