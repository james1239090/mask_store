<!DOCTYPE html>
<html>
  <head>
    <title>MaskStore 後台</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>
  <body>
    <div class="container">
      <%= render "common/navbar" %>
      <%= notice_message %>
      <div class="row">
        <div class="col-md-2">
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
            <li><%= link_to("Products", admin_products_path) %></li>
            <li><%= link_to("Orders", admin_orders_path) %></li>
            <li><%= link_to("Users",admin_users_path) %></li>
            <li><%= link_to("Purchase",admin_purchases_path) %></li>
            <li><%= link_to("Inventory", admin_inventories_path) %></li>
            <li><%= link_to("SalePlatform",admin_sale_platforms_path) %></li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
